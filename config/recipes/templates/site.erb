 <VirtualHost *:80>
   ServerName <%= application %>
    # !!! Be sure to point DocumentRoot to 'public'!
    DocumentRoot <%= current_path %>/public
    <Directory <%= current_path %>/public>
       # This relaxes Apache security settings.
       AllowOverride all
       # MultiViews must be turned off.
       Options -MultiViews
    </Directory>
 </VirtualHost>
